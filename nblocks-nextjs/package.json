{
  "name": "nblocks-nextjs",
  "version": "0.1.0",
  "description": "nBlocks integration for Next.js applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {    
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "nblocks",
    "nextjs",
    "authentication",
    "feature-flags",
    "team-management"
  ],
  "author": "nBlocks",
  "license": "MIT",
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "jwt-decode": "^4.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  }
} 